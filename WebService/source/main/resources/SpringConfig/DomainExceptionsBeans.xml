<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="CustomerAlreadyExistException" class="domain.customer.CustomerAlreadyExistException"/>
    <bean id="CustomerDoesNotExistException" class="domain.customer.CustomerDoesNotExistException"/>

    <bean id="OrderAlreadyExistException" class="domain.order.OrderAlreadyExistException"/>
    <bean id="OrderDoesNotExistException" class="domain.order.OrderDoesNotExistException"/>

    <bean id="ProductAlreadyExistException" class="domain.product.ProductAlreadyExistException"/>
    <bean id="ProductDoesNotExistException" class="domain.product.ProductDoesNotExistException"/>

</beans>