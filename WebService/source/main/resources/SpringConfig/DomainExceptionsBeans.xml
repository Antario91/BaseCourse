<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="CustomerAlreadyExistException" class="domain.customer.exceptions.CustomerAlreadyExistException"/>
    <bean id="CustomerDoesNotExistException" class="domain.customer.exceptions.CustomerDoesNotExistException"/>

    <bean id="OrderDoesNotExistException" class="domain.order.exceptions.OrderDoesNotExistException"/>

    <bean id="ProductAlreadyExistException" class="domain.product.exceptions.ProductAlreadyExistException"/>
    <bean id="ProductDoesNotExistException" class="domain.product.exceptions.ProductDoesNotExistException"/>

</beans>