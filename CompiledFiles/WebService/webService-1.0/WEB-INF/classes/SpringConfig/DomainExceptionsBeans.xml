<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="CustomerAlreadyExistException" class="domain.repositories.customerRepository.CustomerAlreadyExistException"/>
    <bean id="CustomerDoesNotExistException" class="domain.repositories.customerRepository.CustomerDoesNotExistException"/>

    <bean id="OrderAlreadyExistException" class="domain.repositories.orderRepository.OrderAlreadyExistException"/>
    <bean id="OrderDoesNotExistException" class="domain.repositories.orderRepository.OrderDoesNotExistException"/>

    <bean id="ProductAlreadyExistException" class="domain.repositories.productRepository.ProductAlreadyExistException"/>
    <bean id="ProductDoesNotExistException" class="domain.repositories.productRepository.ProductDoesNotExistException"/>

</beans>